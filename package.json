{
  "name": "neverbuild",
  "version": "0.3.0",
  "private": true,
  "engines": {
    "node": ">=4"
  },
  "dependencies": {
    "bootstrap": "github:twbs/bootstrap#v4-dev",
    "classnames": "^2.2.5",
    "normalize.css": "^4.2.0",
    "react-dom": "^16.5.0",
    "react-router": "^2.8.1",
    "react": "^16.5.0",
    "@neverbland/react-scripts": "latest"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "lint:js": "eslint src/js/**/*.js",
    "lint:scss": "sass-lint 'src/css/**/*.scss' -v -q",
    "svg:pretty": "find src/images -name '*.svg' -type f -exec svgo --pretty --indent=2 '{}' \\;"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "sasslintConfig": "./node_modules/@neverbland/react-scripts/config/sasslint.yml"
}
